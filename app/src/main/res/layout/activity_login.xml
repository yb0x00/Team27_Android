<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginActivity">

    <ImageView
        android:id="@+id/cat_and_dog_image"
        android:layout_width="331dp"
        android:layout_height="451dp"
        android:src="@drawable/cat_and_dog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="-51dp"
        />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="3dp"
        app:layout_constraintBottom_toBottomOf="@id/cat_and_dog_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/line"/>
    <TextView
        android:id="@+id/introduction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="함께 찾는 반려동물, 투게더 펫"
        app:layout_constraintTop_toBottomOf="@+id/cat_and_dog_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="@style/TogetherPetTextHeadingLarge"
        android:includeFontPadding="false"
        android:layout_marginTop="18dp"
        />

    <ImageView
        android:id="@+id/kakao_login_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introduction_text"
        android:layout_marginTop="37dp"
        app:srcCompat="@drawable/loginbar" />



</androidx.constraintlayout.widget.ConstraintLayout>