<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".home.view.HomeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/home_greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="170dp"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TogetherPetTextMedium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/home_walking_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textAppearance="@style/TogetherPetText10"
                    app:layout_constraintStart_toEndOf="@id/home_profile_img"
                    app:layout_constraintTop_toTopOf="@id/home_profile_img" />

                <ImageView
                    android:id="@+id/home_profile_img"
                    android:layout_width="125dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_greeting" />

                <ImageView
                    android:id="@+id/home_heart_icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/heart_icon"
                    app:layout_constraintStart_toStartOf="@id/home_walking_title"
                    app:layout_constraintTop_toBottomOf="@id/home_walking_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/home_total_count_title"
                    android:textAppearance="@style/TogetherPetText10"
                    app:layout_constraintBottom_toBottomOf="@id/home_heart_icon1"
                    app:layout_constraintStart_toEndOf="@id/home_heart_icon1"
                    app:layout_constraintTop_toTopOf="@id/home_heart_icon1" />

                <TextView
                    android:id="@+id/home_total_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="68dp"
                    android:textAppearance="@style/TogetherPetText10"
                    app:layout_constraintBottom_toBottomOf="@id/home_heart_icon1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/home_heart_icon1" />

                <TextView
                    android:id="@+id/home_avg_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="68dp"
                    android:textAppearance="@style/TogetherPetText7Gray"
                    app:layout_constraintBottom_toBottomOf="@id/home_heart_icon1"
                    app:layout_constraintStart_toEndOf="@id/home_total_count"
                    app:layout_constraintTop_toTopOf="@id/home_heart_icon1" />

                <ImageView
                    android:id="@+id/home_heart_icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/heart_icon"
                    app:layout_constraintStart_toStartOf="@id/home_heart_icon1"
                    app:layout_constraintTop_toBottomOf="@id/home_heart_icon1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/home_total_distance_title"
                    android:textAppearance="@style/TogetherPetText10"
                    app:layout_constraintBottom_toBottomOf="@id/home_heart_icon2"
                    app:layout_constraintStart_toEndOf="@id/home_heart_icon2"
                    app:layout_constraintTop_toTopOf="@id/home_heart_icon2" />

                <TextView
                    android:id="@+id/home_total_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="68dp"
                    android:textAppearance="@style/TogetherPetText10"
                    app:layout_constraintBottom_toBottomOf="@id/home_heart_icon2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/home_heart_icon2" />

                <TextView
                    android:id="@+id/home_avg_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="68dp"
                    android:textAppearance="@style/TogetherPetText7Gray"
                    app:layout_constraintBottom_toBottomOf="@id/home_heart_icon2"
                    app:layout_constraintStart_toEndOf="@id/home_total_distance"
                    app:layout_constraintTop_toTopOf="@id/home_heart_icon2" />

                <ImageView
                    android:id="@+id/home_heart_icon3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/heart_icon"
                    app:layout_constraintStart_toStartOf="@id/home_heart_icon1"
                    app:layout_constraintTop_toBottomOf="@id/home_heart_icon2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/home_total_time_title"
                    android:textAppearance="@style/TogetherPetText10"
                    app:layout_constraintBottom_toBottomOf="@id/home_heart_icon3"
                    app:layout_constraintStart_toEndOf="@id/home_heart_icon3"
                    app:layout_constraintTop_toTopOf="@id/home_heart_icon3" />

                <TextView
                    android:id="@+id/home_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="68dp"
                    android:textAppearance="@style/TogetherPetText10"
                    app:layout_constraintBottom_toBottomOf="@id/home_heart_icon3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/home_heart_icon3" />

                <TextView
                    android:id="@+id/home_avg_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="68dp"
                    android:textAppearance="@style/TogetherPetText7Gray"
                    app:layout_constraintBottom_toBottomOf="@id/home_heart_icon3"
                    app:layout_constraintStart_toEndOf="@id/home_total_time"
                    app:layout_constraintTop_toTopOf="@id/home_heart_icon3" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/leaves_img"
                    app:layout_constraintBottom_toTopOf="@id/home_heart_icon1"
                    app:layout_constraintStart_toEndOf="@id/home_walking_title" />

                <ImageView
                    android:id="@+id/home_bar"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="380dp"
                    android:background="@color/light_gray"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/like_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_bar" />

                <TextView
                    android:id="@+id/home_popular_post_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="25dp"
                    android:includeFontPadding="false"
                    android:text="@string/home_popular_post_title"
                    android:textAppearance="@style/TogetherPetTextHeadingLarge"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_bar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notice_ready"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_popular_post_title" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/home_popular_post_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/home_logo"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/white"
                android:src="@drawable/main_logo"
                android:visibility="gone" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_sos"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/KTC_red_pink"
                android:visibility="visible">

                <TextView
                    android:id="@+id/home_sos_text"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:text="@string/sos"
                    android:textAppearance="@style/TogetherPetTextMediumRed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="4dp"
                    android:text="@string/sos_context"
                    android:textAppearance="@style/TogetherPetTextSmallRed"
                    app:layout_constraintBottom_toBottomOf="@id/home_sos_text"
                    app:layout_constraintStart_toEndOf="@id/home_sos_text" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_missingPetList"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_sos_text" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </FrameLayout>

</layout>
