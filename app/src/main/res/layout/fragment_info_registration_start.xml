<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/start_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/together_text"
        android:layout_marginTop="247dp"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/start_white_button"
        android:layout_width="338dp"
        android:layout_height="43dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_main_text"
        android:layout_marginTop="150dp"
        android:background="@drawable/start_white_button"
        android:text="반려동물 정보 등록 후 시작하기"
        android:elevation="4dp"
        android:gravity="center"
        android:textSize="21sp"/>

    <TextView
        android:id="@+id/start_pink_button"
        android:layout_width="338dp"
        android:layout_height="43dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_white_button"
        android:layout_marginTop="68dp"
        android:background="@drawable/start_pink_button"
        android:text="바로 반려동물 실종 정보 등록하기"
        android:elevation="4dp"
        android:paddingStart="45dp"
        android:gravity="center"

        android:textSize="21sp"/>

    <ImageView
        android:id="@+id/icon_sos"
        android:translationZ="4dp"
        android:layout_width="34dp"
        android:layout_height="34dp"
        app:layout_constraintStart_toStartOf="@+id/start_pink_button"
        app:layout_constraintTop_toTopOf="@+id/start_pink_button"
        app:layout_constraintBottom_toBottomOf="@+id/start_pink_button"
        android:layout_marginStart="10dp"
        android:src="@drawable/sos_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음에 등록 하기"
        android:textSize="21sp"
        app:layout_constraintTop_toBottomOf="@+id/start_pink_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
